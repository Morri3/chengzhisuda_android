<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:id="@+id/item"
    >

    <View
        android:id="@+id/bg"
        android:layout_width="345dp"
        android:layout_height="105dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/white_round_bg2"
        />

    <ImageView
        android:id="@+id/top_icon"
        android:layout_width="22dp"
        android:layout_height="22dp"
        app:layout_constraintLeft_toLeftOf="@id/bg"
        app:layout_constraintTop_toTopOf="@id/bg"
        android:src="@drawable/icon_rank1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="图书馆学生助理"
        android:textColor="@color/text_black_color"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="6dp"
        app:layout_constraintLeft_toRightOf="@id/top_icon"
        app:layout_constraintTop_toTopOf="@id/bg"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/line2"
        android:layout_width="335dp"
        android:layout_height="24dp"
        android:layout_marginTop="6dp"
        app:layout_constraintLeft_toLeftOf="@id/bg"
        app:layout_constraintRight_toRightOf="@id/bg"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/area"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="校图书馆A座"
            android:textColor="@color/sub_title_color"
            android:textStyle="bold"
            android:textSize="12dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <TextView
            android:id="@+id/settlement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="月结"
            android:textColor="@color/sub_title_color"
            android:textStyle="bold"
            android:textSize="12dp"
            android:layout_marginRight="5dp"
            app:layout_constraintRight_toLeftOf="@+id/salary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <TextView
            android:id="@+id/salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15元/小时"
            android:textColor="@color/main_purple"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginRight="5dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/line3"
        android:layout_width="340dp"
        android:layout_height="22dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line2"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/detail_text"
            android:layout_width="81dp"
            android:layout_height="20dp"
            android:text="查看详情"
            android:textColor="@color/text_white_color"
            android:textStyle="normal"
            android:textSize="12dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAlignment="textEnd"
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/orange_round_bg"
            />
        <ImageView
            android:id="@+id/detail_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintLeft_toLeftOf="@id/detail_text"
            app:layout_constraintTop_toTopOf="@id/detail_text"
            app:layout_constraintBottom_toBottomOf="@id/detail_text"
            android:src="@drawable/icon_jobdetail_orange"
            />
        <TextView
            android:id="@+id/work_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="周一14:00-17:00"
            android:textColor="@color/text_black_color"
            android:textStyle="bold"
            android:textSize="12dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="7dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>