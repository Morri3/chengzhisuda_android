    <View
        android:id="@+id/bg"
        android:layout_width="345dp"
        android:layout_height="220dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/white_round_bg2"
        />

    <TextView
        android:id="@+id/sid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SID:1"
        android:textColor="@color/text_white_color"
        android:textStyle="normal"
        android:textSize="12dp"
        app:layout_constraintLeft_toLeftOf="@id/bg"
        app:layout_constraintTop_toTopOf="@id/bg"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="15dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:textAlignment="center"
        android:background="@drawable/sid_background"
        />
    <TextView
        android:id="@+id/name"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:text="图书馆学生助理"
        android:textColor="@color/text_black_color"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toRightOf="@id/sid"
        app:layout_constraintTop_toTopOf="@id/bg"
        android:ellipsize="end"
        android:maxEms="5"
        android:maxLines="1"
        />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已结束"
        android:textColor="@color/text_grey_color"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="17dp"
        app:layout_constraintRight_toRightOf="@id/bg"
        app:layout_constraintTop_toTopOf="@id/bg"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/line2"
        android:layout_width="335dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="@id/bg"
        app:layout_constraintRight_toRightOf="@id/bg"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/area"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="校图书馆A座"
            android:textColor="@color/sub_title_color"
            android:textStyle="bold"
            android:textSize="12dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <TextView
            android:id="@+id/settlement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="月结"
            android:textColor="@color/sub_title_color"
            android:textStyle="bold"
            android:textSize="12dp"
            android:layout_marginRight="5dp"
            app:layout_constraintRight_toLeftOf="@+id/salary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <TextView
            android:id="@+id/salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15元/小时"
            android:textColor="@color/main_purple"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginRight="5dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/line3"
        android:layout_width="335dp"
        android:layout_height="22dp"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="@id/bg"
        app:layout_constraintRight_toRightOf="@id/bg"
        app:layout_constraintTop_toBottomOf="@id/line2"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/update_time"
            android:layout_width="160dp"
            android:layout_height="20dp"
            android:text="2022.11.2 11:00:00"
            android:textColor="@color/text_grey_color"
            android:textStyle="normal"
            android:textSize="12dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAlignment="textStart"
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:layout_marginLeft="5dp"
            />

        <TextView
            android:id="@+id/work_time"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="周一14:00-17:00"
            android:textColor="@color/text_black_color"
            android:textStyle="bold"
            android:textSize="12dp"
            android:textAlignment="textEnd"
            android:layout_marginRight="5dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:ellipsize="end"
            android:maxEms="5"
            android:maxLines="1"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/line4"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="@id/bg"
        app:layout_constraintRight_toRightOf="@id/bg"
        app:layout_constraintTop_toBottomOf="@id/line3"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/mark"
            android:layout_width="57dp"
            android:layout_height="20dp"
            android:text="评分"
            android:textColor="@color/text_black_color"
            android:textStyle="normal"
            android:textSize="12dp"
            android:layout_marginRight="18dp"
            app:layout_constraintRight_toLeftOf="@+id/cancel"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAlignment="textEnd"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:background="@drawable/purple_round_bg"
            />
        <ImageView
            android:id="@+id/mark_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="30dp"
            app:layout_constraintRight_toRightOf="@id/mark"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/button_like"
            android:layout_marginLeft="4dp"
            />

