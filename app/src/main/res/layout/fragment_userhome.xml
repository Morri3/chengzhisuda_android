<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_pink"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    >

    <!--顶部标题栏-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBox"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        >

        <View
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/white"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/topBox"
            app:layout_constraintRight_toRightOf="@id/topBox"
            app:layout_constraintTop_toTopOf="@id/topBox"
            app:layout_constraintBottom_toBottomOf="@id/topBox"
            android:text="个人中心"
            android:textColor="@color/text_black_color"
            android:textSize="18dp"
            android:gravity="center"
            android:textStyle="bold"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/head_bg"
        android:layout_width="152dp"
        android:layout_height="120dp"
        android:layout_marginTop="60dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBox"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/head_bg"
        android:layout_marginLeft="4dp"
        />
    <ImageView
        android:id="@+id/head"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="4dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBox"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/head"
        android:background="@drawable/white_round_bg2"
        android:paddingBottom="11dp"
        android:paddingTop="5dp"
        android:paddingRight="4dp"
        android:paddingLeft="1dp"
        />
    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/head_bg"
        app:layout_constraintRight_toRightOf="@id/head_bg"
        app:layout_constraintTop_toBottomOf="@id/head"
        android:text="陈小二"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/box"
        android:layout_width="332dp"
        android:layout_height="288dp"
        android:layout_marginTop="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/head_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/userhome_bg"
        />

    <ImageView
        android:id="@+id/icon1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toTopOf="@id/box"
        app:layout_constraintLeft_toLeftOf="@id/box"
        android:src="@drawable/icon_info"
        />
    <TextView
        android:id="@+id/userinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/icon1"
        app:layout_constraintTop_toTopOf="@id/box"
        android:text="个人信息"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:textStyle="bold"
        />
    <ImageView
        android:id="@+id/right1"
        android:layout_width="26dp"
        android:layout_height="23dp"
        android:layout_marginTop="45dp"
        android:layout_marginRight="50dp"
        app:layout_constraintTop_toTopOf="@id/box"
        app:layout_constraintRight_toRightOf="@id/box"
        android:src="@drawable/right"
        />

    <ImageView
        android:id="@+id/icon2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toBottomOf="@id/icon1"
        app:layout_constraintLeft_toLeftOf="@id/box"
        android:src="@drawable/icon_resume"
        />
    <TextView
        android:id="@+id/resume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/icon1"
        app:layout_constraintTop_toBottomOf="@id/userinfo"
        android:text="简历管理"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:textStyle="bold"
        />
    <ImageView
        android:id="@+id/right2"
        android:layout_width="26dp"
        android:layout_height="23dp"
        android:layout_marginTop="38dp"
        android:layout_marginRight="50dp"
        app:layout_constraintTop_toBottomOf="@id/right1"
        app:layout_constraintRight_toRightOf="@id/box"
        android:rotation="10.0"
        android:src="@drawable/right"
        />

    <ImageView
        android:id="@+id/icon3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toBottomOf="@id/icon2"
        app:layout_constraintLeft_toLeftOf="@id/box"
        android:src="@drawable/icon_tag"
        />
    <TextView
        android:id="@+id/intented"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/icon2"
        app:layout_constraintTop_toBottomOf="@id/resume"
        android:text="意向兼职"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:layout_marginTop="37dp"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:textStyle="bold"
        />
    <ImageView
        android:id="@+id/right3"
        android:layout_width="26dp"
        android:layout_height="23dp"
        android:layout_marginTop="38dp"
        android:layout_marginRight="50dp"
        app:layout_constraintTop_toBottomOf="@id/right2"
        app:layout_constraintRight_toRightOf="@id/box"
        android:rotation="-10.0"
        android:src="@drawable/right"
        />

    <ImageView
        android:id="@+id/icon4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toBottomOf="@id/icon3"
        app:layout_constraintLeft_toLeftOf="@id/box"
        android:src="@drawable/icon_setting"
        />
    <TextView
        android:id="@+id/set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/icon3"
        app:layout_constraintTop_toBottomOf="@id/intented"
        android:text="设置"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:layout_marginTop="37dp"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:textStyle="bold"
        />
    <ImageView
        android:id="@+id/right4"
        android:layout_width="26dp"
        android:layout_height="23dp"
        android:layout_marginTop="38dp"
        android:layout_marginRight="50dp"
        app:layout_constraintTop_toBottomOf="@id/right3"
        app:layout_constraintRight_toRightOf="@id/box"
        android:rotation="12.0"
        android:src="@drawable/right"
        />
</androidx.constraintlayout.widget.ConstraintLayout>