<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:paddingBottom="30dp"
    >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="362dp"
        android:layout_height="164dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:src="@drawable/home_logo"
        >
    </ImageView>

    <TextView
        android:id="@+id/name"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="图书馆助理"
        android:textSize="22dp"
        android:textColor="@color/text_black_color"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo"
        android:textStyle="bold"
        android:shadowDx="10"
        android:shadowDy="10"
        android:shadowRadius="10"
        android:shadowColor="@color/text_shadow_color"
        />
    <TextView
        android:id="@+id/settlement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="月结"
        android:textSize="12dp"
        android:textColor="@color/text_grey_color"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@+id/salary"
        app:layout_constraintTop_toBottomOf="@id/logo"
        />
    <TextView
        android:id="@+id/salary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15元/小时"
        android:textColor="@color/main_purple"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo"
        />
    <ImageView
        android:id="@+id/icon1"
        android:layout_width="17dp"
        android:layout_height="17dp"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:src="@drawable/icon_area"
        android:layout_marginLeft="27dp"
        >
    </ImageView>
    <TextView
        android:id="@+id/area"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="图书馆"
        android:textColor="@color/text_black_color"
        android:textSize="14dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="9dp"
        app:layout_constraintLeft_toRightOf="@id/icon1"
        app:layout_constraintTop_toBottomOf="@id/name"
        />
    <ImageView
        android:id="@+id/icon2"
        android:layout_width="17dp"
        android:layout_height="17dp"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:src="@drawable/icon_requirement"
        android:layout_marginLeft="240dp"
        >
    </ImageView>
    <TextView
        android:id="@+id/exp"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="无需经验，有培训"
        android:textColor="@color/text_black_color"
        android:textSize="14dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="9dp"
        app:layout_constraintLeft_toRightOf="@id/icon2"
        app:layout_constraintTop_toBottomOf="@id/name"
        />

    <!--分割线-->
    <View
        android:id="@+id/divider1"
        android:layout_width="362dp"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/area"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/divider"
        android:layout_marginTop="10dp"
        />

    <!--工作内容-->
    <ImageView
        android:id="@+id/icon_content"
        android:layout_width="22dp"
        android:layout_height="22dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider1"
        android:src="@drawable/icon_title"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/content_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="工作内容"
        android:textColor="@color/text_black_color"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="@id/icon_content"
        app:layout_constraintTop_toBottomOf="@id/divider1"
        android:shadowDx="10"
        android:shadowDy="10"
        android:shadowRadius="10"
        android:shadowColor="@color/text_shadow_color"
        />
    <TextView
        android:id="@+id/content"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:text="1. 负责图书、期刊的上架，读架，倒架，整理书架等。2. 完成老师发放的其他任务。"
        android:textColor="@color/text_black_color"
        android:textSize="14dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/content_text"
        />

    <!--分割线-->
    <View
        android:id="@+id/divider2"
        android:layout_width="362dp"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/divider"
        android:layout_marginTop="10dp"
        />

    <!--任职要求-->
    <ImageView
        android:id="@+id/icon_requirement"
        android:layout_width="22dp"
        android:layout_height="22dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider2"
        android:src="@drawable/icon_title"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/requirement_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="任职要求"
        android:textColor="@color/text_black_color"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="@id/icon_requirement"
        app:layout_constraintTop_toBottomOf="@id/divider2"
        android:shadowDx="10"
        android:shadowDy="10"
        android:shadowRadius="10"
        android:shadowColor="@color/text_shadow_color"
        />
    <TextView
        android:id="@+id/requirement"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:text="无"
        android:textColor="@color/text_black_color"
        android:textSize="14dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/requirement_text"
        />

    <!--分割线-->
    <View
        android:id="@+id/divider3"
        android:layout_width="362dp"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/requirement"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/divider"
        android:layout_marginTop="10dp"
        />

    <!--招聘方信息-->
    <ImageView
        android:id="@+id/icon_employer"
        android:layout_width="22dp"
        android:layout_height="22dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider3"
        android:src="@drawable/icon_title"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:shadowDx="10"
        android:shadowDy="10"
        android:shadowRadius="10"
        android:shadowColor="@color/text_shadow_color"
        />
    <TextView
        android:id="@+id/employer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="招聘方信息"
        android:textColor="@color/text_black_color"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="@id/icon_employer"
        app:layout_constraintTop_toBottomOf="@id/divider3"
        />
    <TextView
        android:id="@+id/employer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="陈老师"
        android:textColor="@color/text_black_color"
        android:textSize="14dp"
        android:layout_marginLeft="50dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/employer_text"
        />
    <TextView
        android:id="@+id/slogan"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:text="欢迎所有有兴趣且有时间的同学报名参加！"
        android:textColor="@color/text_black_color"
        android:textSize="14dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/employer_name"
        />
    <TextView
        android:id="@+id/unit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="浙大城市学院图书馆"
        android:textColor="@color/text_black_color"
        android:textSize="14dp"
        android:layout_marginLeft="50dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/slogan"
        />
    <TextView
        android:id="@+id/descriptions"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:text="为城院师生提供图书资源"
        android:textColor="@color/text_black_color"
        android:textSize="14dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/unit_name"
        />
    <TextView
        android:id="@+id/job_nums"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="在招职位3个"
        android:textColor="@color/text_black_color"
        android:textSize="14dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/descriptions"
        />
    <View
        android:id="@+id/divider4"
        android:layout_width="1dp"
        android:layout_height="18dp"
        app:layout_constraintTop_toBottomOf="@id/descriptions"
        app:layout_constraintLeft_toRightOf="@id/job_nums"
        android:layout_marginLeft="80dp"
        android:background="@color/divider"
        android:layout_marginTop="6dp"/>
    <TextView
        android:id="@+id/unit_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="杭州"
        android:textColor="@color/text_black_color"
        android:textSize="14dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toRightOf="@id/divider4"
        app:layout_constraintTop_toBottomOf="@id/descriptions"
        />

    <!--分割线-->
    <View
        android:id="@+id/divider5"
        android:layout_width="362dp"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/job_nums"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/divider"
        android:layout_marginTop="10dp"
        />

    <!--职位点评-->
    <ImageView
        android:id="@+id/icon_rate"
        android:layout_width="22dp"
        android:layout_height="22dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider5"
        android:src="@drawable/icon_title"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/rate_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="职位点评"
        android:textColor="@color/text_black_color"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="@id/icon_rate"
        app:layout_constraintTop_toBottomOf="@id/divider5"
        android:shadowDx="10"
        android:shadowDy="10"
        android:shadowRadius="10"
        android:shadowColor="@color/text_shadow_color"
        />
    <ImageView
        android:id="@+id/star1"
        android:layout_width="18dp"
        android:layout_height="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rate_text"
        android:src="@drawable/icon_rate"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/rate1"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="总体评分"
        android:textColor="@color/text_black_color"
        android:textSize="14dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toRightOf="@id/star1"
        app:layout_constraintTop_toBottomOf="@id/rate_text"
        />
    <TextView
        android:id="@+id/num1"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="9.50"
        android:textColor="@color/main_purple"
        android:textSize="14dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toRightOf="@id/rate1"
        app:layout_constraintTop_toBottomOf="@id/rate_text"
        />
    <ImageView
        android:id="@+id/star2"
        android:layout_width="18dp"
        android:layout_height="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rate1"
        android:src="@drawable/icon_rate"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/rate2"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="专业契合度"
        android:textColor="@color/text_black_color"
        android:textSize="14dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toRightOf="@id/star2"
        app:layout_constraintTop_toBottomOf="@id/rate1"
        />
    <TextView
        android:id="@+id/num2"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="9.50"
        android:textColor="@color/main_purple"
        android:textSize="14dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toRightOf="@id/rate2"
        app:layout_constraintTop_toBottomOf="@id/rate1"
        />
    <ImageView
        android:id="@+id/star3"
        android:layout_width="18dp"
        android:layout_height="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rate2"
        android:src="@drawable/icon_rate"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/rate3"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="薪资水平"
        android:textColor="@color/text_black_color"
        android:textSize="14dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toRightOf="@id/star3"
        app:layout_constraintTop_toBottomOf="@id/rate2"
        />
    <TextView
        android:id="@+id/num3"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="9.50"
        android:textColor="@color/main_purple"
        android:textSize="14dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toRightOf="@id/rate3"
        app:layout_constraintTop_toBottomOf="@id/rate2"
        />
    <ImageView
        android:id="@+id/star4"
        android:layout_width="18dp"
        android:layout_height="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rate3"
        android:src="@drawable/icon_rate"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/rate4"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="工作环境"
        android:textColor="@color/text_black_color"
        android:textSize="14dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toRightOf="@id/star4"
        app:layout_constraintTop_toBottomOf="@id/rate3"
        />
    <TextView
        android:id="@+id/num4"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="9.50"
        android:textColor="@color/main_purple"
        android:textSize="14dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toRightOf="@id/rate4"
        app:layout_constraintTop_toBottomOf="@id/rate3"
        />
    <ImageView
        android:id="@+id/star5"
        android:layout_width="18dp"
        android:layout_height="14dp"
        app:layout_constraintLeft_toRightOf="@id/num1"
        app:layout_constraintTop_toBottomOf="@id/rate_text"
        android:src="@drawable/icon_rate"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/rate5"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="闲时待遇"
        android:textColor="@color/text_black_color"
        android:textSize="14dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toRightOf="@id/star5"
        app:layout_constraintTop_toBottomOf="@id/rate_text"
        />
    <TextView
        android:id="@+id/num5"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="9.50"
        android:textColor="@color/main_purple"
        android:textSize="14dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toRightOf="@id/rate5"
        app:layout_constraintTop_toBottomOf="@id/rate_text"
        />
    <ImageView
        android:id="@+id/star6"
        android:layout_width="18dp"
        android:layout_height="14dp"
        app:layout_constraintLeft_toRightOf="@id/num2"
        app:layout_constraintTop_toBottomOf="@id/rate5"
        android:src="@drawable/icon_rate"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/rate6"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="岗前培训"
        android:textColor="@color/text_black_color"
        android:textSize="14dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toRightOf="@id/star6"
        app:layout_constraintTop_toBottomOf="@id/rate5"
        />
    <TextView
        android:id="@+id/num6"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="9.50"
        android:textColor="@color/main_purple"
        android:textSize="14dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toRightOf="@id/rate6"
        app:layout_constraintTop_toBottomOf="@id/rate5"
        />
    <ImageView
        android:id="@+id/star7"
        android:layout_width="18dp"
        android:layout_height="14dp"
        app:layout_constraintLeft_toRightOf="@id/num3"
        app:layout_constraintTop_toBottomOf="@id/rate6"
        android:src="@drawable/icon_rate"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/rate7"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="专业技能满意度"
        android:textColor="@color/text_black_color"
        android:textSize="11dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="9dp"
        app:layout_constraintLeft_toRightOf="@id/star7"
        app:layout_constraintTop_toBottomOf="@id/rate6"
        />
    <TextView
        android:id="@+id/num7"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="9.50"
        android:textColor="@color/main_purple"
        android:textSize="14dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toRightOf="@id/rate7"
        app:layout_constraintTop_toBottomOf="@id/rate6"
        />
    <ImageView
        android:id="@+id/star8"
        android:layout_width="18dp"
        android:layout_height="14dp"
        app:layout_constraintLeft_toRightOf="@id/num4"
        app:layout_constraintTop_toBottomOf="@id/rate7"
        android:src="@drawable/icon_rate"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/rate8"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="总体收获满意度"
        android:textColor="@color/text_black_color"
        android:textSize="11dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="9dp"
        app:layout_constraintLeft_toRightOf="@id/star8"
        app:layout_constraintTop_toBottomOf="@id/rate7"
        />
    <TextView
        android:id="@+id/num8"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="9.50"
        android:textColor="@color/main_purple"
        android:textSize="14dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toRightOf="@id/rate8"
        app:layout_constraintTop_toBottomOf="@id/rate7"
        />

    <!--报名按钮-->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_signup"
        android:layout_width="125dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_signup"
        app:layout_constraintTop_toBottomOf="@id/num8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
