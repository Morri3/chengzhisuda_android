        android:layout_marginTop="35dp"
        app:layout_constraintLeft_toRightOf="@id/num4_1"
        app:layout_constraintTop_toTopOf="@id/bg4"
        >
    </RatingBar>
    <TextView
        android:id="@+id/text4_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/bg4"
        app:layout_constraintTop_toBottomOf="@id/text4_1"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="17dp"
        android:text="专业技能满意度"
        android:textColor="@color/text_black_color"
