<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_orange"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    >

    <!--顶部标题栏-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBox"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        >

        <View
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/white"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/topBox"
            app:layout_constraintRight_toRightOf="@id/topBox"
            app:layout_constraintTop_toTopOf="@id/topBox"
            app:layout_constraintBottom_toBottomOf="@id/topBox"
            android:text="评分"
            android:textColor="@color/text_black_color"
            android:textSize="18dp"
            android:gravity="center"
            android:textStyle="bold"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--部分1-->
    <View
        android:id="@+id/bg1"
        android:layout_width="362dp"
        android:layout_height="52dp"
        app:layout_constraintTop_toBottomOf="@id/topBox"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="35dp"
        android:background="@drawable/white_round_bg2"
        />
    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/bg1"
        app:layout_constraintTop_toTopOf="@id/bg1"
        app:layout_constraintBottom_toBottomOf="@id/bg1"
        android:layout_marginLeft="32dp"
        android:text="总体评分"
        android:textColor="@color/main_purple"
        android:textSize="16dp"
        android:gravity="center"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/num1"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/bg1"
        app:layout_constraintTop_toTopOf="@id/bg1"
        app:layout_constraintBottom_toBottomOf="@id/bg1"
        android:layout_marginLeft="125dp"
        android:text="0.0"
        android:textColor="@color/main_purple"
        android:textSize="16dp"
        android:gravity="left"
        android:textStyle="bold"
        />
    <!--评星级控件-->
    <RatingBar
        android:id="@+id/rating1"
        style="@style/RatingBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintLeft_toRightOf="@id/num1"
        app:layout_constraintTop_toTopOf="@id/bg1"
        app:layout_constraintBottom_toBottomOf="@id/bg1"
        >
    </RatingBar>

    <!--部分2-->
    <View
        android:id="@+id/bg2"
        android:layout_width="362dp"
        android:layout_height="115dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/white_round_bg2"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bg1" />

    <ImageView
        android:id="@+id/icon1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@id/bg2"
        app:layout_constraintLeft_toLeftOf="@id/bg2"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/icon_evaluation"
        />
    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/bg2"
        app:layout_constraintTop_toTopOf="@id/bg2"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="15dp"
        android:text="专业性指标"
        android:textColor="@color/text_black_color"
        android:textSize="16dp"
        android:gravity="center"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/text2_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/bg2"
        app:layout_constraintTop_toBottomOf="@id/text2"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="7dp"
        android:text="专业契合度"
        android:textColor="@color/text_black_color"
        android:textSize="14dp"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/num2_1"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/bg2"
        app:layout_constraintTop_toTopOf="@id/bg2"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="43dp"
        android:text="0.0"
        android:textColor="@color/main_purple"
        android:textSize="16dp"
        android:gravity="left"
        android:textStyle="bold"
        />
    <!--评星级控件-->
    <RatingBar
        android:id="@+id/rating2_1"
        style="@style/RatingBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="35dp"
        app:layout_constraintLeft_toRightOf="@id/num2_1"
        app:layout_constraintTop_toTopOf="@id/bg2"
        >
    </RatingBar>
    <TextView
        android:id="@+id/text2_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/bg2"
        app:layout_constraintTop_toBottomOf="@id/text2_1"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:text="薪资水平"
        android:textColor="@color/text_black_color"
        android:textSize="14dp"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/num2_2"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/bg2"
        app:layout_constraintTop_toBottomOf="@id/num2_1"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="11dp"
        android:text="0.0"
        android:textColor="@color/main_purple"
        android:textSize="16dp"
        android:gravity="left"
        android:textStyle="bold"
        />
    <!--评星级控件-->
    <RatingBar
        android:id="@+id/rating2_2"
        style="@style/RatingBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toRightOf="@id/num2_2"
        app:layout_constraintTop_toBottomOf="@id/num2_1"
        >
    </RatingBar>

    <!--部分3-->
    <View
        android:id="@+id/bg3"
        android:layout_width="362dp"
        android:layout_height="115dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/white_round_bg2"
