<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_yellow"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    >

    <!--顶部标题栏-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBox"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        >

        <View
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/white"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/topBox"
            app:layout_constraintRight_toRightOf="@id/topBox"
            app:layout_constraintTop_toTopOf="@id/topBox"
            app:layout_constraintBottom_toBottomOf="@id/topBox"
            android:text="简历"
            android:textColor="@color/text_black_color"
            android:textSize="18dp"
            android:gravity="center"
            android:textStyle="bold"
            />
        <ImageView
            android:id="@+id/back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/back_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="18dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/icon"
        android:layout_width="88dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/topBox"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/title_resume"
        android:layout_marginLeft="21dp"
        />

    <ImageView
        android:id="@+id/button_save"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBox"
        android:src="@drawable/button_save"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:text="上传简历"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/text_black_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icon"
        />

    <!-- 1.白色背景卡片 -->
    <View
        android:id="@+id/card"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:background="@drawable/white_round_bg2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginTop="10dp"
        android:outlineAmbientShadowColor="#FFAAAA"
        android:outlineSpotShadowColor="#BAFDCE" />
    <ImageView
        android:id="@+id/icon2"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:src="@drawable/icon_resume_upload"
        app:layout_constraintLeft_toLeftOf="@id/card"
        app:layout_constraintTop_toTopOf="@id/card"
        app:layout_constraintBottom_toBottomOf="@id/card"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="4dp"
        />
    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="10dp"
        android:text="拍摄照片"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/text_black_color"
        app:layout_constraintLeft_toRightOf="@id/icon2"
        app:layout_constraintBottom_toBottomOf="@id/card"
        app:layout_constraintTop_toTopOf="@id/card"
        />
    <ImageView
        android:id="@+id/icon3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/icon_right"
        app:layout_constraintRight_toRightOf="@id/card"
        app:layout_constraintTop_toTopOf="@id/card"
        app:layout_constraintBottom_toBottomOf="@id/card"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="5dp"
        />
    <TextView
        android:id="@+id/tip1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="5dp"
        android:text="支持jpg格式的简历照片"
        android:textSize="10dp"
        android:textStyle="bold"
        android:textColor="@color/text_grey_color"
        app:layout_constraintLeft_toRightOf="@id/title2"
        app:layout_constraintTop_toTopOf="@id/card"
        app:layout_constraintBottom_toBottomOf="@id/card"
        />

    <!-- 2.白色背景卡片 -->
    <View
        android:id="@+id/card2"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:background="@drawable/white_round_bg2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card"
        android:layout_marginTop="10dp"
        android:outlineAmbientShadowColor="#FFAAAA"
        android:outlineSpotShadowColor="#BAFDCE" />
    <ImageView
        android:id="@+id/icon4"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/icon_resume_template"
        app:layout_constraintLeft_toLeftOf="@id/card2"
        app:layout_constraintTop_toTopOf="@id/card2"
        app:layout_constraintBottom_toBottomOf="@id/card2"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="4dp"
        />
    <TextView
        android:id="@+id/title3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="14dp"
        android:text="模板格式"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/text_black_color"
        app:layout_constraintLeft_toRightOf="@id/icon4"
        app:layout_constraintBottom_toBottomOf="@id/card2"
        app:layout_constraintTop_toTopOf="@id/card2"
        />
    <ImageView
        android:id="@+id/icon5"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/template_detail"
        app:layout_constraintRight_toRightOf="@id/card2"
        app:layout_constraintTop_toTopOf="@id/card2"
        app:layout_constraintBottom_toBottomOf="@id/card2"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="5dp"
        />
    <TextView
        android:id="@+id/tip3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="5dp"
        android:text="目前仅支持上传指定模板的简历"
        android:textSize="10dp"
        android:textStyle="bold"
        android:textColor="@color/text_grey_color"
        app:layout_constraintLeft_toRightOf="@id/title3"
        app:layout_constraintTop_toTopOf="@id/card2"
        app:layout_constraintBottom_toBottomOf="@id/card2"
        />

    <!--3.简历内容-->
    <TextView
        android:id="@+id/title4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:text="简历内容"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/text_black_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card2"
        />
    <!-- 白色背景卡片 -->
    <View
        android:id="@+id/card3"
        android:layout_width="345dp"
        android:layout_height="360dp"
        android:background="@drawable/white_round_bg2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title4"
        android:layout_marginTop="10dp"
        android:outlineAmbientShadowColor="#FFAAAA"
        android:outlineSpotShadowColor="#BAFDCE" />
    <ImageView
        android:id="@+id/pic"
        android:layout_width="320dp"
        android:layout_height="330dp"
        android:src="@drawable/zyq_resume"
        app:layout_constraintRight_toRightOf="@id/card3"
        app:layout_constraintLeft_toLeftOf="@id/card3"
        app:layout_constraintTop_toTopOf="@id/card3"
        app:layout_constraintBottom_toBottomOf="@id/card3"
        />
</androidx.constraintlayout.widget.ConstraintLayout>