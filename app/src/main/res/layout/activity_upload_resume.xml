<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_yellow"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    >

    <!--顶部标题栏-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBox"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        >

        <View
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/white"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/topBox"
            app:layout_constraintRight_toRightOf="@id/topBox"
            app:layout_constraintTop_toTopOf="@id/topBox"
            app:layout_constraintBottom_toBottomOf="@id/topBox"
            android:text="简历"
            android:textColor="@color/text_black_color"
            android:textSize="18dp"
            android:gravity="center"
            android:textStyle="bold"
            />
        <ImageView
            android:id="@+id/back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/back_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="18dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/icon"
        android:layout_width="88dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/topBox"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/title_resume"
        android:layout_marginLeft="21dp"
        />

    <ImageView
        android:id="@+id/button_save"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBox"
        android:src="@drawable/button_save"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:text="上传简历"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/text_black_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icon"
        />
    <TextView
        android:id="@+id/tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="0dp"
        android:text="目前支持jpg格式的简历图片。"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/text_grey_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        />
    <!-- 白色背景卡片 -->
    <View
        android:id="@+id/card"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/white_round_bg2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tip"
        android:layout_marginTop="10dp"
        android:outlineAmbientShadowColor="#FFAAAA"
        android:outlineSpotShadowColor="#BAFDCE" />
    <ImageView
        android:id="@+id/icon2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icon_upload"
        app:layout_constraintLeft_toLeftOf="@id/card"
        app:layout_constraintTop_toTopOf="@id/card"
        app:layout_constraintBottom_toBottomOf="@id/card"
        android:layout_marginLeft="25dp"
        />
    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="10dp"
        android:text="选择简历图片"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/text_black_color"
        app:layout_constraintLeft_toRightOf="@id/icon2"
        app:layout_constraintBottom_toBottomOf="@id/card"
        app:layout_constraintTop_toTopOf="@id/card"
        />
    <ImageView
        android:id="@+id/icon3"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/icon_right"
        app:layout_constraintRight_toRightOf="@id/card"
        app:layout_constraintTop_toTopOf="@id/card"
        app:layout_constraintBottom_toBottomOf="@id/card"
        android:layout_marginRight="30dp"
        />

    <!--简历内容-->
    <TextView
        android:id="@+id/title3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:text="简历内容"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/text_black_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card"
        />
    <!-- 白色背景卡片 -->
    <View
        android:id="@+id/card2"
        android:layout_width="359dp"
        android:layout_height="360dp"
        android:background="@drawable/white_round_bg2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title3"
        android:layout_marginTop="10dp"
        android:outlineAmbientShadowColor="#FFAAAA"
        android:outlineSpotShadowColor="#BAFDCE" />
    <ImageView
        android:id="@+id/pic"
        android:layout_width="330dp"
        android:layout_height="330dp"
        android:src="@drawable/zyq_resume"
        app:layout_constraintRight_toRightOf="@id/card2"
        app:layout_constraintLeft_toLeftOf="@id/card2"
        app:layout_constraintTop_toTopOf="@id/card2"
        app:layout_constraintBottom_toBottomOf="@id/card2"
        />
</androidx.constraintlayout.widget.ConstraintLayout>