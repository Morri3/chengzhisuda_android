<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/title"
        android:layout_width="170dp"
        android:layout_height="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="请输入标题"
        android:textColor="@color/text_black_color"
        android:textSize="18dp"
        android:layout_marginLeft="0dp"
        android:gravity="left"
        android:layout_gravity="center_horizontal"

        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        />
    <TextView
        android:id="@+id/date"
        android:layout_width="140dp"
        android:layout_height="25dp"
        app:layout_constraintLeft_toRightOf="@id/title"
        app:layout_constraintTop_toTopOf="parent"
        android:text="请输入日期"
        android:textColor="@color/text_black_color"
        android:textSize="16dp"
        android:layout_marginLeft="5dp"
        android:gravity="left"

        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        />
    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:gravity="left"
        android:text="请输入内容"
        android:textColor="@color/text_black_color"
        android:textSize="18dp"
        android:layout_marginLeft="0dp"

        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        />

    <!--编辑-->
    <EditText
        android:id="@+id/title_edit"
        android:layout_width="170dp"
        android:layout_height="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="请输入标题"
        android:textColorHint="@color/text_black_color"
        android:textColor="@color/text_black_color"
        android:background="@null"
        android:textSize="18dp"
        android:layout_marginLeft="0dp"
        android:gravity="left"
        />
    <EditText
        android:id="@+id/date_edit"
        android:layout_width="140dp"
        android:layout_height="25dp"
        app:layout_constraintLeft_toRightOf="@id/title_edit"
        app:layout_constraintTop_toTopOf="parent"
        android:text="请输入日期"
        android:textColorHint="@color/text_black_color"
        android:textColor="@color/text_black_color"
        android:background="@null"
        android:textSize="16dp"
        android:layout_marginLeft="5dp"
        android:gravity="left"
        />
    <EditText
        android:id="@+id/content_edit"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_edit"
        android:minLines="2"
        android:gravity="top"
        android:text="请输入内容"
        android:textColorHint="@color/text_black_color"
        android:textColor="@color/text_black_color"
        android:background="@null"
        android:textSize="18dp"
        android:layout_marginLeft="0dp"
        />
    <ImageView
        android:id="@+id/delete_edit"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/button_cancel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/save_edit"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="2dp"
        app:layout_constraintRight_toLeftOf="@id/add_edit"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/button_save"
        />
    <ImageView
        android:id="@+id/add_edit"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/button_add"
        app:layout_constraintRight_toLeftOf="@id/delete_edit"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>